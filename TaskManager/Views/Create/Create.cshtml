@model TaskManager.Models.PersonalTask

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="color:darkgreen;">Create New Task</h3>
        <hr />
        <div class="row">
            <div class="col-md-offset-2 col-md-8 well">
                <div class="row">
                    <div>
                        @Html.TextBoxFor(model => model.Title, new { placeholder = "Title", @class = "form-control text-center " })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div>
                        @Html.TextBoxFor(model => model.Tags, new { placeholder = "Tag1, tag2, ...", @class = "form-control text-left " })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div>
                        @Html.TextAreaFor(model => model.Content, new { placeholder = "Content", rows = "15", @class = "form-control col-md-12" })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="row">
                <div class= "col-md-1 col-md-offset-9">
                    <input type="submit" value="Create" class="btn btn-success text-center" />
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
