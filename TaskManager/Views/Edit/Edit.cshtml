@model TaskManager.Models.PersonalTask


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="color:blue">Edit Task</h3>
        <hr />

        <div class="row">
            <div class="col-md-offset-2 col-md-8 well">
                <div class="row">
                    <div>
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control text-center " })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    @{
                        var tags = Model.Tags.ToString();
                    }
                        <div>
                            @Html.TextBoxFor(Model=>Model.Tags, new { placeholder = "Tag1, tag2, ...", @class = "form-control text-left" })
                        </div>
                   
                    <br />
                </div>
                <div class="row">
                    <div  >
                    @Html.TextAreaFor(model => model.Content, new  {rows="11", @class = "form-control col-md-12" } )
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="row">
            <div class="col-md-2 col-md-offset-9">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
